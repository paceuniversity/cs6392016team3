<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fabianpatino.mymidterm.image">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fabianpatino.mymidterm.MainActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="@string/title"
        android:id="@+id/title"
        android:height="30dp"
        android:textAlignment="center"

        android:textSize="30dp"
        android:textIsSelectable="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/dollars"
        android:layout_gravity="top"
    android:layout_below="@+id/title"
    android:layout_alignEnd="@+id/convert"
    android:layout_marginTop="70dp"
    android:textAlignment="center" />

    <Button
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:id="@+id/convert"
        android:onClick="onClick"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Francs"
            android:id="@+id/textView"
            android:background="@drawable/bill"
            android:clickable="false"
            android:maxHeight="50dp"
            android:maxWidth="100dp"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/francs" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/francs"
        android:layout_gravity="left"
        android:textSize="50dp"
            android:textAlignment="center"
            android:layout_below="@+id/convert"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</FrameLayout>
